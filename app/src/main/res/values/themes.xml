<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <!-- Customize attributes as needed -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/CustomBottomSheetAnimation</item>
    </style>

    <style name="CustomBottomSheetAnimation" parent="@android:style/Animation">
        <!-- Define custom animation styles for your bottom sheet -->
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>